<Window x:Class="SlickProcess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SlickProcess" Height="675" Width="656">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="txtInstruction" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding Path=Instruction, FallbackValue='Put the thing in the thing.'}" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="WrapWithOverflow"/>
        
        <Image x:Name="picPicture" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Source="{Binding Path=Picture}" />

        <TextBlock Text="{Binding Path=StepNumber, FallbackValue='Step X of Y'}" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" FontSize="16"/>

        <Button x:Name="btnBack" Content="{Binding Path=BackText, FallbackValue='Back'}" IsEnabled="{Binding Path=BackEnabled, FallbackValue=False}" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Margin="3" HorizontalContentAlignment="Center" Height="50" Width="100" Click="btnBack_Click" FontSize="16"/>
        <Button x:Name="btnNext" Content="{Binding Path=NextText, FallbackValue='Next'}" IsEnabled="{Binding Path=NextEnabled, FallbackValue=True}" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" Margin="3" HorizontalContentAlignment="Center" Height="50" Width="100" Click="btnNext_Click" FontSize="16"/>
        <Button x:Name="btnCancel" Content="{Binding Path=CancelText, FallbackValue='Cancel'}" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Right" Margin="3" HorizontalContentAlignment="Center" Height="50" Width="100" Click="btnCancel_Click" FontSize="16"/>
    </Grid>
</Window>
